@model _06_CRUDPersonas_Entities.clsPersona

@{
    Layout = null;
}

<!DOCTYPE html>
<link href="~/styles.css" rel="stylesheet" type="text/css" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
    <div class="form-horizontal">
        <h2>Editar</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="mdl-textfield mdl-js-textfield">
            @Html.LabelFor(model => model.idPersona, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.idPersona, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                @Html.HiddenFor(model => model.idPersona)
                @Html.ValidationMessageFor(model => model.idPersona, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mdl-textfield mdl-js-textfield">
            @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.nombre, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                @Html.HiddenFor(model => model.nombre)
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mdl-textfield mdl-js-textfield">
            @Html.LabelFor(model => model.apellidos, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.apellidos, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                @Html.HiddenFor(model => model.apellidos)
                @Html.ValidationMessageFor(model => model.apellidos, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mdl-textfield mdl-js-textfield">
            @Html.LabelFor(model => model.fechaNacimiento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.fechaNacimiento, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                @Html.HiddenFor(model => model.fechaNacimiento)
                @Html.ValidationMessageFor(model => model.fechaNacimiento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mdl-textfield mdl-js-textfield">
            @Html.LabelFor(model => model.direccion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.direccion, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                @Html.HiddenFor(model => model.direccion)
                @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mdl-textfield mdl-js-textfield">
            @Html.LabelFor(model => model.telefono, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mdl-textfield mdl-js-textfield">
            @Html.LabelFor(model => model.idDepartamento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.idDepartamento, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                @Html.HiddenFor(model => model.idDepartamento)
                @Html.ValidationMessageFor(model => model.idDepartamento, "", new { @class = "text-danger" })
            </div>
        </div>

        @ViewData["MensajeFurtivo"]

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" />
            </div>
        </div>
    </div>
    }
    
    <div>
        <br/>
        @Html.ActionLink("Volver al listado", "vistaExamen", new { id = Model.idDepartamento }, new { @class = "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" })
    </div>
</body>
</html>